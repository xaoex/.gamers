#!/usr/bin/env bash
# .gamers aliases - AI Agents, Virtual & Digital Persons
# Shortcuts for managing agents, worlds, and creative workflows

# =============================================================================
# AGENT MANAGEMENT
# =============================================================================

# Navigate to agent directories
alias agents="cd ~/agents"
alias worlds="cd ~/worlds"
alias tasks="cd ~/tasks"
alias content="cd ~/content"

# Quick agent shortcuts
alias agent="gamers-agent"
alias spawn="gamers-agent spawn"
alias kill-agent="gamers-agent terminate"
alias list-agents="gamers-agent list"
alias agent-status="gamers-agent status"

# =============================================================================
# WORLD MANAGEMENT
# =============================================================================

# World navigation and control
alias world="gamers-world"
alias enter="gamers-world enter"
alias leave="gamers-world leave"
alias world-status="gamers-world status"
alias list-worlds="gamers-world list"

# =============================================================================
# TASK EXECUTION
# =============================================================================

# Task management for agents
alias task="gamers-task"
alias run="gamers-task execute"
alias queue="gamers-task queue"
alias task-status="gamers-task status"
alias list-tasks="gamers-task list"

# =============================================================================
# CONTENT CREATION
# =============================================================================

# Content generation shortcuts
alias create="gamers-create"
alias generate="gamers-create generate"
alias code="gamers-create code"
alias art="gamers-create art"
alias write="gamers-create write"
alias compose="gamers-create compose"

# =============================================================================
# AI/ML TOOLS
# =============================================================================

# AI model interactions
alias ai="gamers-ai"
alias chat="gamers-ai chat"
alias complete="gamers-ai complete"
alias embed="gamers-ai embed"
alias train="gamers-ai train"

# =============================================================================
# DIGITAL IDENTITY
# =============================================================================

# Identity and persona management
alias persona="gamers-persona"
alias identity="gamers-persona identity"
alias avatar="gamers-persona avatar"
alias voice="gamers-persona voice"

# =============================================================================
# COLLABORATION
# =============================================================================

# Multi-agent collaboration
alias collab="gamers-collab"
alias sync="gamers-collab sync"
alias share="gamers-collab share"
alias broadcast="gamers-collab broadcast"

# =============================================================================
# MONITORING & LOGS
# =============================================================================

# System monitoring
alias logs="gamers-logs"
alias metrics="gamers-metrics"
alias health="gamers-health"

# =============================================================================
# GIT SHORTCUTS (for version control)
# =============================================================================

alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git log --oneline -20"

# =============================================================================
# SHELL UTILITIES
# =============================================================================

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~"

# Colorized output
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias l='ls -lah'
alias la='ls -lAh'

# Reload shell configuration
alias reload="source ~/.bash_profile"

# Print PATH entries
alias path='echo -e ${PATH//:/\\n}'
